---
import { Image } from "astro:assets";
import HeroImage from "@/assets/jorgen-hero.jpg";
---

<section id="hero" class="relative my-20">
  <div class="flex w-full flex-col items-center gap-6 lg:flex-row lg:px-8">
    <!-- Lado izquierdo - Imagen -->
    <div
      class="relative flex flex-1 items-center justify-center overflow-hidden rounded-md"
    >
      <Image
        src={HeroImage}
        alt="joergen andersen"
        class="w-full max-w-[16rem] md:max-w-md"
        width={512}
        height={342}
        loading="eager"
        format="webp"
        fetchpriority="high"
      />
    </div>

    <!-- Lado derecho - Contenido -->
    <div class="px-8">
      <span
        class="relative block font-serif text-[24px] leading-[1.33] md:text-[30px] [&>p]:inline [&>p]:font-serif [&>p]:leading-[inherit] [&>p]:font-medium"
        ><span class="absolute left-[-14px] opacity-90">“</span><p
          class="opacity-[0.9]"
        >
          One should always keep an eye on the <em>future</em>. <br
            class="hidden md:block"
          /> Otherwise, it arrives sooner than expected.
        </p><span class="absolute translate-x-0.5">”</span></span
      ><div class="mt-[25px] ml-auto flex w-full items-center gap-2 md:w-[50%]">
        <div class="hidden h-px flex-grow bg-gray-400 md:block"></div><div
          class="flex flex-col md:ml-auto md:text-right"
        >
          <span
            class="text-[13px] leading-none font-medium no-underline opacity-[0.9]"
            >Jørgen Andersen<span
              class="text-gray-1100 mt-1 block md:mt-0 md:inline"
              ><span class="hidden md:inline-block">, </span> Investor</span
            ></span
          >
        </div>
      </div>
    </div>
  </div>
</section>
